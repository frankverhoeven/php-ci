{
    "name": "frankverhoeven/php-ci",
    "description": "PHP CI Tools",
    "minimum-stability": "stable",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FrankVerhoeven\\CI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FrankVerhoeven\\CI\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "composer/semver": "^3.4",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3"
    },
    "require-dev": {
        "frankverhoeven/coding-standard": "^2.2",
        "phpunit/phpunit": "^10.3.5",
        "roave/infection-static-analysis-plugin": "^1.33",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.15",
        "phpstan/phpstan": "^1.10.35",
        "phpstan/phpstan-phpunit": "^1.3.14",
        "phparkitect/phparkitect": "^0.3.25"
    },
    "bin": [
        "bin/ci"
    ]
}
