{
    "name": "frankverhoeven/php-ci",
    "description": "PHP CI Tools",
    "minimum-stability": "stable",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FrankVerhoeven\\CI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FrankVerhoeven\\CI\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        }
    },
    "require": {
        "php": "^8.1",
        "composer/semver": "^3.4",
        "symfony/console": "^6.4",
        "symfony/process": "^6.4"
    },
    "require-dev": {
        "frankverhoeven/coding-standard": "^2.2",
        "phpunit/phpunit": "^11",
        "infection/infection": "^0.28.1",
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^1.10.35",
        "phpstan/phpstan-phpunit": "^1.3.14"
    },
    "bin": [
        "bin/ci"
    ]
}
